@model Indexr.DomainView.ContactInfoViewModel
@using (Ajax.BeginForm("Delete", "Indexr", null,
        new AjaxOptions
        {
            UpdateTargetId = "updateTargetId",
            InsertionMode = InsertionMode.Replace,
            HttpMethod = "POST",
            OnSuccess = "DeleteIndexrSuccess",
        }, new { @id = "deleteIndexrForm" }))
{
    <div id="indexrDeletePage">
        <div class="page-form">
            <div class="col12">
                @Html.ValidationSummary(true)
                <div id="updateTargetId" class="validation-summary-errors">
                </div>
                @Html.HiddenFor(m => m.ContactInfoId)
                <div class="left">
                    Do you want to delete this?
                </div>
            </div>
        </div>
    </div>
}
